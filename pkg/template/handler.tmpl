                    return result, nil
                {{ else -}}
                    if timeout := runtime.GrpcTimeout(ctx); timeout > 0 {
                        var cancel context.CancelFunc
                        ctx, cancel = context.WithTimeout(ctx, timeout)
                        defer cancel()
                    }
                    result, err := r.client.{{ $method.GetName }}(ctx, in)
                    if err != nil {
                        return nil, errors.ToGraphQLError(err)
                    }
